<!DOCTYPE html>
<html>
  <head>
    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
    <style>
      /* Always set the map height explicitly to define the size of the div
       * element that contains the map. */
      #map {
        height: 90%;
      }
      /* Optional: Makes the sample page fill the window. */
      html, body {
        height: 90%;
        margin: 0;
        padding: 0;
      }
    </style>
  </head>
  <body>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">Filter Data<b class="caret"></b></a>
      <ul class="dropdown-menu">
        <li><button onclick ="initMap()">Only Bakken Counties</button></li>
        <li><button onclick ="renderAllNorthDakota()">All North Dakota</a></li>
      </ul>
  </li>
  <div id="map"></div>
  <script>
  function initMap(){
    map = new google.maps.Map(document.getElementById('map'), {
      zoom: 8,
      center: new google.maps.LatLng( 47.360470,-102.369400),
      mapTypeId: 'terrain'
    });
    $.getJSON('http://localhost:3000/json/bakken_counties', function(data) {
      for (var i = 0; i < data.length; i++) {
        var type = data[i].Contaminant;
        var volume = data[i].Volume;
        var date = data[i].DateIncident;
        var contained = data[i].Contained;
        var infowindow = new google.maps.InfoWindow({
          content: type + volume + date
        });
        var marker = new google.maps.Marker({
          position: new google.maps.LatLng(data[i].Latitude, data[i].Longitude),
          icon: 'http://maps.google.com/mapfiles/kml/shapes/placemark_circle_highlight.png',
          map: map
        });



        marker.addListener('click', function() {
          infowindow.open(map, marker);
        });
      }
    });
  }
  function renderAllNorthDakota(){
    map = new google.maps.Map(document.getElementById('map'), {
      zoom: 8,
      center: new google.maps.LatLng(47.360470,-102.369400),
      mapTypeId: 'terrain'
    });
    $.getJSON('http://localhost:3000/json/all', function(data) {
      for (var i = 0; i < data.length; i++) {
        var type = data[i].Contaminant;
        var volume = data[i].Volume;
        var date = data[i].DateIncident;
        var contained = data[i].Contained;
        var infowindow = new google.maps.InfoWindow({
          content: type + date
        });
        var marker = new google.maps.Marker({
          position: new google.maps.LatLng(data[i].Latitude, data[i].Longitude),
          icon: 'http://maps.google.com/mapfiles/kml/shapes/placemark_circle_highlight.png',
          map: map
        });
        marker.addListener('click', function() {
          infowindow.open(map, marker);
        });
      }
    });
  }
    </script>
    <script async defer
      src="https://maps.googleapis.com/maps/api/js?callback=initMap">
    </script>
  </body>
</html>