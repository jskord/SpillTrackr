  <body>
  <h1>Sort by Date</h1>
  <div class="form">
    <%= form_tag '/json/sort_by_date', method: :get do  %>
      
      <p class="sort_by_date_form">Beginning date</p>
      <div class="sort_by_date_form">
        <%= label_tag :year %>
        <%= text_field_tag :start_year %>
      </div>
      <div class="sort_by_date_form">
        <%= label_tag :month %>
        <%= text_field_tag :start_month %>
      </div>
      <div class="sort_by_date_form">
       <p class="sort_by_date_form">Ending Date</p>
        <%= label_tag :year %>
        <%= text_field_tag :end_year %>
      </div>
      <div class="sort_by_date_form">
        <%= label_tag :month %>
        <%= text_field_tag :end_month %>
      </div>
    <%= submit_tag "Submit" %>
  <% end %>
  </div>
  <div class="map"
  <div id="map"></div>
  </body>
  <script>
  $( "form" ).submit(function( event ) {
    event.preventDefault();
    var formData = $("form").serialize();
    console.log(formData);
    $.getJSON('/json/sort_by_date')
    $.ajax({
      url: '/json/sort_by_date',
      type: 'get',
      dataType: 'json',
      data: $('form').serialize(),
      success: function(data) {
        console.log(data);
      }
    });
  });
  var markers = [];
  var src = '/app/assets/kml/bakken.kml';
  function initMap() {
    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 7,
      center: new google.maps.LatLng( 47.361893,-100.465128),
      mapTypeId: 'hybrid'
    });

    loadKmlLayer(src, map);

    $.getJSON('/json/all', function(data) {
      data.forEach(function(spill) {
        var type = spill.contaminant;
        var volume = spill.volume;
        var date = spill.date_incident;
        var units = spill.units;
        var id = spill.id.toString();
        var str = "Click to View Details and Post About this Spill"
        var infowindow = new google.maps.InfoWindow({
          content: "Date of Spill: " + date + " Contaminant Type: " + type + str.link("/spills/" + id)
        });
        var marker = new google.maps.Marker({
          position: new google.maps.LatLng(spill.latitude, spill.longitude),
          map: map
        });
        marker.addListener('click', function() {
          infowindow.open(map, marker);
        });

        markers.push(marker);
      });

      var markerCluster = new MarkerClusterer(map, markers,{
          imagePath: 'https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/m'
      });
    });

  }

  function loadKmlLayer(src, map) {
    var kmlLayer = new google.maps.KmlLayer(src, {
      suppressInfoWindows: true,
      preserveViewport: false,
      map: map
    });
  }

  var heatmap = new google.maps.visualization.HeatmapLayer({
    data: markers
  });
  heatmap.setMap(map);




    </script>

    <h1>Recent Posts</h1>
    <% @posts.each do |post| %>
      <h4><%= post.user.name %></h4>
      <p><%= post.content %></p>
      <p><a href="/spills/<%= post.spill.id %>"><%= post.spill.incident_url %></a></p>
      <% if post.image.url == '/images/original/missing.png' %>
      <% else %>
        <img src="<%= post.image.url %>"/>
      <% end %>
      <a href="<%= post.url %>"><%= post.url %></a>
    <% end %>

    <script src="https://developers.google.com/maps/documentation/javascript/examples/markerclusterer/markerclusterer.js"></script>



    <script async defer
      src="https://maps.googleapis.com/maps/api/js?callback=initMap">
    </script>

